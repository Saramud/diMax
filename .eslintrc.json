{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "@typescript-eslint/recommended" // Уберите эту строку, если не используете TypeScript
  ],
  "parser": "@typescript-eslint/parser", // Уберите эту строку, если не используете TypeScript
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error" // Выдает ошибку при несоответствии Prettier
  }
}
